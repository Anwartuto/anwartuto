---
import Layout from '../layouts/Layout.astro';
---
<Layout title="collections des timbres">

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="contact.scss">
    <link rel="icon" type="image/x-icon" href="assets/logo.ico">
    <script src="/js/contact.js" defer></script>
    <title></title>
</head>

<body>
    <header>
        <div id="logo">
            <img src="assets/logo.png" alt="logo" />
            <h1></h1>
        </div>
        <nav>
            <ul>
                <li><a href="acceuil">ACCUEIL</a></li>
                <li><a href="presentationTimbre">TIMBRES</a></li>
                <li><a href="contact">CONTACT</a></li>
            </ul>
        </nav>
    </header>

    <div id="banniere_image">
        <div id="banniere_texte">
            l'art de collectionner des timbres.
        </div>
    </div>

    <main id="flex">
        <form>
            <fieldset>
                <legend>Formulaire de contact</legend>
                <label for='name'>Nom complet:</label>
                <input type="text" placeholder="Nom complet" /><br />

                <label for="email">Email:</label>
                <input type="email" placeholder="your@email.com" /><br />

                <label for="password">Mot de passe:</label>
                <input type="password" /><br />

                <label for="phone">Téléphone:</label>
                <input type="tel" placeholder="06********" /><br /><br />

                <label for="gender">Genre:</label><br />
                <input type="radio" name="gender" />Male <br />
                <input type="radio" name="gender" />Female<br /><br />

                <label for="age">Age:</label>
                <select>
                    <option>0-20</option>
                    <option>20-40</option>
                    <option>40+</option>
                </select>
                <br /><br />

                <label for="collection">Sujet de collection souhaité:</label><br />
                <input type="checkbox" /> Philatélie fiscale<br />
                <input type="checkbox" /> Philatélie thématique<br />
                <input type="checkbox" /> Philatélie mondialiste<br />
                <input type="checkbox" /> Aérophilatélie<br />
                <br /><br />

                <label for="message">Message:</label>
                <textarea cols="115" rows="10" placeholder="Saisissez votre message ici."></textarea>
                <br /><br />
                <input type="submit" value="Envoyer" id="submit" />
                <input type="reset" value="Vider le formulaire" />
            </fieldset>
            <div id="message"></div>
        </form>
    </main>
    <br><br><br>
    <center><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4750.961071647328!2d2.2919063759616796!3d48.858373600708376!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e1!3m2!1sfr!2sfr!4v1728545615825!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></center>
    <footer>
        <a href="#"><img src="assets/facebook.png" alt="facebook" /></a>
        <a href="#"><img src="assets/twitter.png" alt="twitter" /></a>
        <p>© 2024 Anwar</p>
    </footer>
</body>
<style>
    body
{
    background: url("assets/fond.jpg");
    color: #181818;
    width: 900px;
    margin: auto;
}
header
{
    background: url("assets/separateur.png") repeat-x bottom;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}
#logo>img
{
    width: 80px;
    height: 80px;
}
nav ul
{
    list-style-type: none;
    display: flex;
}
nav li
{
    margin-right: 15px;
    font-weight: bold;
    font-size: 1.25em;
}
nav a
{
    font-size: 1.3em;
    color: #181818;
    padding-bottom: 3px;
    text-decoration: none;
}
nav a:hover
{
    color: #760001;
    border-bottom: 3px solid #760001;
}
#banniere_image
{
    margin-top: 15px;
    height: 200px;
    border-radius: 5px;
    background: url("assets/collectionTimbres.jpg") no-repeat;
    position: relative;
    box-shadow: 0px 4px 4px #1c1a19;
    margin-bottom: 25px;
}
#banniere_texte
{

    border-radius: 0px 0px 5px 5px;
    height: 33px;
    width: 100%;
    padding-top: 15px;
    padding-left: 4px;
    background-color: black;
    opacity: 0.8;
    color: white;
    font-size: 0.9em;
    position: absolute;
    bottom: 0;
    text-transform: uppercase;
}
footer{
    margin-top: 10px;
    background:  url("assets/separateur.png") repeat-x top;
    padding-top: 25px;
    text-align: right;
}
footer>p{
    text-align: right;
    font-weight: bold;
}
</style>
<style>
    fieldset{
    border-radius: 5px;
    border-color: #760001;
}

form{
    font-size: 1.2em;
    display: block;
}
</style>
</html>
</Layout>